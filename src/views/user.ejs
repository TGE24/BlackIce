<% include partials/header %>

<body>
  <div id="app">
    <div class="main-wrapper main-wrapper-1">
        <% include partials/navbar %>
         
        <% include partials/userside %>      
      <!-- Main Content -->
      <div class="main-content">
        <section class="section">
          <div class="section-body">
            <div class="row">
              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    <h4>Report Accident Case</h4>
                  </div>

                <div class="row clearfix">
                  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                      <div class="card-body">
                        <form id="wizard_with_validation" method="POST" action="/postReport">
                          <h3>Basic Information</h3>
                          <fieldset>
                            <div class="form-group form-float">
                              <div class="form-line">
                                <label class="form-label">Injured Person Name</label>
                                <input type="text" class="form-control" name="injName" required>
                              </div>
                            </div>
                            <div class="form-group form-float">
                              <div class="form-line">
                                <label class="form-label">Address</label>
                                <input type="text" class="form-control" name="injAddress">
                              </div>
                            </div>
                            <div class="form-group form-float">
                              <div class="form-line">
                                <label class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" name="injPhone">
                              </div>
                            </div>      

                            <div class="form-group form-float">
                              <div class="form-line">
                                <label class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" name="injDob">
                              </div>
                            </div>

                            <div class="section-title">Gender</div>
                            <div class="custom-control custom-radio custom-control-inline">
                              <input type="radio" id="customRadioInline1" value="male" name="injGender" class="custom-control-input" required>
                              <label class="custom-control-label" for="customRadioInline1">Male</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                              <input type="radio" id="customRadioInline2" value="female" name="injGender" class="custom-control-input" required>
                              <label class="custom-control-label" for="customRadioInline2">Female</label>
                            </div>

                          </fieldset>
                          <h3>Injury Information</h3>
                          <fieldset>
                            <div class="form-group">
                              <label>Incident Details</label>
                              <textarea class="form-control" name="injDetails"></textarea>
                            </div>
                            <div class="form-group form-float">
                              <div class="form-line">
                                <label class="form-label">Who was injured person?</label>
                                <input type="text" name="injProffession" class="form-control">
                              </div>
                            </div>
                            <div class="form-group form-float">
                              <div class="form-line">
                                <label class="form-label">Injury Type</label>
                                <input type="text" name="injType" class="form-control" required>
                              </div>
                            </div>                            
                          </fieldset>
                        </fieldset>
                        <h3>Hospital Information</h3>
                        <fieldset>
                          
                          <div class="section-title">Does Injury require Physician?</div>
                          <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" id="physicain" value="true" name="hospital" class="custom-control-input">
                            <label class="custom-control-label" for="physicain">Yes</label>
                          </div>
                          <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" id="physician2" value="false" name="hospital" class="custom-control-input">
                            <label class="custom-control-label" for="physician2">No</label>
                          </div>

                          <div class="form-group form-float">
                            <div class="form-line">
                              <label class="form-label">Hospital Name</label>
                              <input type="text" name="hosName" class="form-control" >
                            </div>
                          </div>
                          <div class="form-group form-float">
                            <div class="form-line">
                              <label class="form-label">Hospital Address</label>
                              <input type="text" name="hosAddress" class="form-control" >
                            </div>
                          </div> 
                          <div class="form-group form-float">
                            <div class="form-line">
                              <label class="form-label">Hospital Phone</label>
                              <input type="tel" name="hosPhone" class="form-control" >
                            </div>
                          </div>                            
                        </fieldset>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
                </div>
              </div>
            </div>
          </div>
        </section>
    </div>
  </div>
  <!-- General JS Scripts -->
  <script src="/assets/js/app.min.js"></script>
  <!-- JS Libraies -->
  <script src="/assets/bundles/summernote/summernote-bs4.js"></script>
  <script src="/assets/bundles/jquery-selectric/jquery.selectric.min.js"></script>
  <script src="/assets/bundles/upload-preview/assets/js/jquery.uploadPreview.min.js"></script>
  <script src="/assets/bundles/bootstrap-tagsinput/dist/bootstrap-tagsinput.min.js"></script>
  <!-- Page Specific JS File -->
  <script src="/assets/js/page/create-post.js"></script>
  <!-- Template JS File -->
  <script src="/assets/js/scripts.js"></script>
  <!-- Custom JS File -->
  <script src="/assets/js/custom.js"></script>
  <script src="/assets/js/app.min.js"></script>
  <script src="/assets/bundles/jquery-validation/dist/jquery.validate.min.js"></script>
  <!-- JS Libraies -->
  <script src="/assets/bundles/jquery-steps/jquery.steps.min.js"></script>
  <!-- Page Specific JS File -->
  <script src="/assets/js/page/form-wizard.js"></script>
</body>

</html>